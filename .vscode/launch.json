{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python Debugger: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
      },
      {
        "name": "Run btrfs-tool",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/Project1/take_snapshot.py",
        "args": [
          "snap",
          "/mnt/btrfs-test/@project",
          "/mnt/btrfs-test/@snap"
        ],
        "console": "integratedTerminal"
      }
    ]
  }
